# --------------------------------------------
# FIREBASE CONFIGURATION
# --------------------------------------------
# Get these from Firebase Console â†’ Project Settings
# https://console.firebase.google.com/project/<your-project>/settings/general

FIREBASE_PROJECT_ID=unitwise-production
FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
FIREBASE_AUTH_DOMAIN=unitwise-production.firebaseapp.com
FIREBASE_STORAGE_BUCKET=unitwise-production.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (for Cloud Functions)
# Download service account JSON from Firebase Console â†’ Project Settings â†’ Service Accounts
# Store path to JSON file (never commit the actual JSON file)
FIREBASE_SERVICE_ACCOUNT_PATH=./service-account-key.json

# --------------------------------------------
# TWILIO CONFIGURATION (WhatsApp OTP)
# --------------------------------------------
# Get credentials from Twilio Console â†’ Account Dashboard
# https://console.twilio.com/

# Twilio Account SID (starts with "AC")
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Twilio Auth Token (keep this secret!)
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Twilio WhatsApp Sandbox Number (for testing)
# Format: whatsapp:+14155238886
# Production: Use your approved WhatsApp Business number
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Twilio Content Template SID (for WhatsApp template messages)
# Create template in Twilio Console â†’ Messaging â†’ Content Templates
# Template format: "{{1}} is your UnitWise verification code..."
TWILIO_CONTENT_SID=HXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Twilio Messaging Service SID (optional, for SMS fallback)
TWILIO_MESSAGING_SERVICE_SID=MGXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# --------------------------------------------
# SENDGRID CONFIGURATION (Email)
# --------------------------------------------
# Get API key from SendGrid Dashboard â†’ Settings â†’ API Keys
# https://app.sendgrid.com/settings/api_keys

# SendGrid API Key (starts with "SG.")
SENDGRID_API_KEY=SG.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Verified sender email (must be verified in SendGrid)
# https://app.sendgrid.com/settings/sender_auth
EMAIL_FROM=noreply@unitwise.app
EMAIL_FROM_NAME=UnitWise Support

# Optional: Reply-to email address
EMAIL_REPLY_TO=support@unitwise.app

# --------------------------------------------
# TERMII CONFIGURATION (SMS Fallback - Future)
# --------------------------------------------
# Get credentials from Termii Dashboard
# https://accounts.termii.com/#/

# Termii API Key
TERMII_API_KEY=TL_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Termii Sender ID (alphanumeric, max 11 chars)
TERMII_SENDER_ID=UnitWise

# Termii API Base URL
TERMII_API_URL=https://api.ng.termii.com/api

# --------------------------------------------
# APPLICATION CONFIGURATION
# --------------------------------------------

# Environment: development | staging | production
APP_ENV=development

# App version (for logging and debugging)
APP_VERSION=1.0.0

# API Base URL (Cloud Functions endpoint)
# Development: http://localhost:5001/<project-id>/<region>
# Production: https://<region>-<project-id>.cloudfunctions.net
API_BASE_URL=http://localhost:5001/unitwise-dev/us-central1

# --------------------------------------------
# SECURITY SETTINGS
# --------------------------------------------

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_RATE_LIMIT_WINDOW_MINUTES=15
OTP_RATE_LIMIT_MAX_REQUESTS=3

# Password Requirements
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SPECIAL_CHARS=false

# Session Configuration
SESSION_TIMEOUT_HOURS=24
REMEMBER_ME_DURATION_DAYS=30

# Bcrypt Salt Rounds (higher = more secure but slower)
# Recommended: 10-12 for production
BCRYPT_SALT_ROUNDS=10

# --------------------------------------------
# LOGGING & MONITORING
# --------------------------------------------

# Log Level: debug | info | warn | error
LOG_LEVEL=info

# Enable detailed logging (set to false in production)
ENABLE_DEBUG_LOGS=true

# Mask sensitive data in logs (always true in production)
MASK_PII_IN_LOGS=true

# --------------------------------------------
# FLUTTER APP CONFIGURATION
# --------------------------------------------

# These are loaded by frontend/lib/env_config.dart

# Enable Firebase Emulator (local development only)
USE_FIREBASE_EMULATOR=true
FIREBASE_AUTH_EMULATOR_HOST=localhost
FIREBASE_AUTH_EMULATOR_PORT=9099
FIREBASE_FIRESTORE_EMULATOR_HOST=localhost
FIREBASE_FIRESTORE_EMULATOR_PORT=8080
FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost
FIREBASE_FUNCTIONS_EMULATOR_PORT=5001

# --------------------------------------------
# OPTIONAL: THIRD-PARTY INTEGRATIONS (Future)
# --------------------------------------------

# Google Maps API (for location autocomplete - future feature)
# GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Sentry (error tracking - future feature)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Mixpanel (analytics - future feature)
# MIXPANEL_TOKEN=xxxxxxxxxxxxxxxxxxxxx

