{
  "name": "unitwise-cloud-functions",
  "version": "1.0.0",
  "description": "UnitWise Cloud Functions - Authentication & Onboarding Module",
  "main": "index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "serve": "firebase emulators:start --only functions,firestore,auth",
    "shell": "firebase functions:shell",
    "start": "npm run serve",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/test/**/*.integration.test.js'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.1",
    "bcrypt": "^5.1.1",
    "twilio": "^4.20.1",
    "@sendgrid/mail": "^8.1.0",
    "dotenv": "^16.4.1",
    "validator": "^13.11.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^29.7.0",
    "firebase-functions-test": "^3.1.1",
    "@types/jest": "^29.5.11",
    "supertest": "^6.3.4"
  },
  "private": true,
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "*.js",
      "utils/*.js",
      "!index.js",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
